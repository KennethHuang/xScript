<?xml version="1.0"?>
<script xmlns="">
	<method name="main">
		<call name="sum" var="sum"/>
		<println>{$sum}</println>
	</method>
	<method name="sum" param="default(50) max">
		<set var="i" value="0"/>
		<set var="sum" value="0"/>
		<while cond="{$i} &lt; 100">
			<set var="i" value="{{$i} + 1}"/>
			<if cond="{$i} mod 2 == 0">
				<then>
					<continue/>
				</then>
			</if>
			<if cond="{$i} >= {$max}">
				<then>
					<break/>
				</then>
			</if>
			<set var="sum" value="{{$sum} + {$i}}"/>
		</while>
		<return value="{$sum}"/>
	</method>
</script>
